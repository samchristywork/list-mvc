<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List Items</title>
</head>

<body>
  <div class="container">
    <h1>List Items</h1>
    <ul class="list-group">
      <% items.forEach(item=> { %>
        <li class="list-item">
          <%= item.content %>
            <a class="remove-btn" href="/list/<%= listId %>/delete-item/<%= item.id %>">remove item</a>
        </li>
        <% }); %>
    </ul>
    <form action="/list/<%= listId %>/add-item" method="POST">
      <input type="text" name="content" placeholder="New item">
      <button type="submit" class="btn">Add Item</button>
    </form>
  </div>
</body>
</html>
